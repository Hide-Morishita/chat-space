.message
  .message-box
    .message-box__group-name
      = message.user.name
    .message-box__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-comment
    - if message.body.present?
      = message.body
    = image_tag message.image.url, class: "message-comment__image" if message.image.present?
